<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <at.markushi.ui.CircleButton
            android:id="@+id/Emergency"
            android:text="МЧС"
            android:src="@drawable/emergency"
            android:layout_width="124dip"
            android:layout_height="124dip"
            app:cb_color="#cc0605"
            app:cb_pressedRingWidth="8dip"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.209" android:layout_marginTop="80dp"/>

    <at.markushi.ui.CircleButton
            android:id="@+id/Police"
            android:text="Милиция"
            android:src="@drawable/police"
            android:layout_width="124dip"
            android:layout_height="124dip"
            app:cb_color="@android:color/tertiary_text_light"
            app:cb_pressedRingWidth="8dip"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.77" android:layout_marginTop="80dp"/>

    <at.markushi.ui.CircleButton
            android:id="@+id/Medical"
            android:text="Скорая"
            android:src="@drawable/redcross"
            android:layout_width="124dip"
            android:layout_height="124dip"
            app:cb_color="@android:color/background_light"
            app:cb_pressedRingWidth="8dip"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.209" android:layout_marginTop="268dp"/>

    <at.markushi.ui.CircleButton
            android:id="@+id/GaS"
            android:text="ГорГаз"
            android:src="@drawable/gas"
            android:layout_width="124dip"
            android:layout_height="124dip"
            app:cb_color="@android:color/background_light"
            app:cb_pressedRingWidth="8dip"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.77" android:layout_marginTop="268dp"/>

    <at.markushi.ui.CircleButton
            android:id="@+id/railway"
            android:text="Ж/д"
            android:src="@drawable/logo_bzhd"
            android:layout_width="124dip"
            android:layout_height="124dip"
            app:cb_color="@android:color/background_light"
            app:cb_pressedRingWidth="8dip"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.209" android:layout_marginTop="456dp"/>
    <at.markushi.ui.CircleButton
            android:id="@+id/BelPost"
            android:text="Почта"
            android:src="@drawable/belpost"
            android:layout_width="124dip"
            android:layout_height="124dip"
            app:cb_color="@android:color/background_light"
            app:cb_pressedRingWidth="8dip"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.77" android:layout_marginTop="456dp"/>
    <TextView
            android:text="МЧС Беларуси"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/Emergency" app:layout_constraintBottom_toTopOf="@+id/Medical"
            app:layout_constraintVertical_bias="0.4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.233"/>
    <TextView
            android:text="Милиция"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/Police" app:layout_constraintBottom_toTopOf="@+id/GaS"
            app:layout_constraintVertical_bias="0.4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.722"/>
    <TextView
            android:text="Скорая"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/Medical" app:layout_constraintBottom_toTopOf="@+id/railway"
            app:layout_constraintVertical_bias="0.288" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.269"/>
    <TextView
            android:text="Газовая служба"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/GaS" app:layout_constraintBottom_toTopOf="@+id/BelPost"
            app:layout_constraintVertical_bias="0.288" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.76"/>
    <TextView
            android:text="БелЖД"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/railway" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.269"/>
    <TextView
            android:text="Белпочта"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/BelPost" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.72"/>

</androidx.constraintlayout.widget.ConstraintLayout>